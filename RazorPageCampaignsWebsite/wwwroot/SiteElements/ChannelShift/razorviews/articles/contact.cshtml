 <properties>
   <category name="Heading">
         <text name="Title" label="Title Name" default="" />
   </category>
   <category name="Addresss Details">
       <text name="AddressLine1" label="Line1" default="" />
       <text name="AddressLine2" label="Line2" default="" />
       <text name="AddressLine3" label="Town/City" default="" />
       <text name="AddressLine4" label="County" default="" />
       <text name="AddressLine5" label="Post Code" default="" /> 
  </category>
  <category name="Contact Details">
   		<text name="Tel1" label="Telephone 1" default="" />
    	<text name="Tel2" label="Telephone 2" default="" />
    	<text name="Tel3" label="Telephone 3" default="" />
        <text name="Email" label="Email" default="" />
  </category>
  </properties>
</control>*@@{

    // Name: Channel Shift - article control
