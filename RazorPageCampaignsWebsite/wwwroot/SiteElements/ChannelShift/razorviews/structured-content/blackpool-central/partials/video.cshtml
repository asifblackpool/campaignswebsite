@using Blackpool.Zengenti.CMS.Models.BlackpoolCentral
@using Blackpool.Zengenti.CMS.Models.GenericTypes;
@using Blackpool.Zengenti.CMS.Models.Components;


@{
    List<SerialisedItem> SerialisedVideo = Page.Video;
    Blackpool.Zengenti.CMS.Models.Components.Video video = null;

    if (SerialisedVideo != null)
    {
        video = SerializeHelper.Deseralize(SerialisedVideo[0]) as Blackpool.Zengenti.CMS.Models.Components.Video;
    }
}

<div class="row equal zero-margin-all bottom-spacer">
    <div class="col-md-12 col-sm-12 col-xs-12 zero-pad-all clearfix" style="margin-bottom:20px; margin-left:0px; margin-right:0px;">
        <!--start of video -->
        <div id="video" class="editor">
            <div class="iframe-wrapper" style="text-align:center; margin:auto; min-height:320px;">
                <iframe id="iframe" src="@video.Url" frameborder="0"></iframe>
            </div>
        </div>
        <!--end of video -->
    </div>
</div>

