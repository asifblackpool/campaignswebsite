@using System;
@using Blackpool.Zengenti.CMS.Constants;
@using Blackpool.Zengenti.CMS.Common;
@using Blackpool.Zengenti.CMS.Helpers;
@using Blackpool.Zengenti.CMS.Models.GenericTypes;
@using Blackpool.Zengenti.CMS.Models.Components;
@using Blackpool.Zengenti.CMS.Models.ParksAndGreenSpaces
@using Blackpool.Zengenti.CMS.Models.Components.ParksAndGreenspaces;

@{
    ParksAndGreenSpacesDTO DTO = Page.Model;
    ParkFacility parkFacility = null;
    ParkImages parkImages = null;
    ParkTypeDetails parkDetails = null;
    AddressWithLocation addressLocation = null;
    string apiKey = System.Web.Configuration.WebConfigurationManager.AppSettings["GoogleApiKey"];
    string ImageUrl = DTO.NoImageUrl;


    Config config = DTO.Config;

    string img_no_icon = "/SiteElements/ChannelShift/Content/images/parks-and-greenspaces/icons/no-icon.png";

    ParkFacilitisCollection parkfacilitiesCollection = new ParkFacilitisCollection();


    foreach (SerialisedContent item in DTO.Flow.GetContent)
    {
        string className = item.Items[0].ClassName;
        switch (className)
        {
            case "ParkTypeDetails":
                parkDetails = (SerializeHelper.Deseralize(item.Items[0])) as ParkTypeDetails;
                break;
            case "ParkFacility":
                parkFacility = (SerializeHelper.Deseralize(item.Items[0])) as ParkFacility;     //a list of park features
                break;
            case "ParkImages":
                parkImages = (SerializeHelper.Deseralize(item.Items[0])) as ParkImages;
                break;
            case "AddressWithLocation":
                addressLocation = (SerializeHelper.Deseralize(item.Items[0])) as AddressWithLocation;
                break;
            default:
                break;
        }

    }

    List<string> facilities = parkFacility.ListingsOfFacilities;
}


@if (parkFacility != null && parkFacility.ParkFeatures != null && parkFacility.ParkFeatures.Count > 0)
{
    <div id="park-features-icon" class="row">
        <div class="col-md-12">
            <div class="MultiCarousel" data-items="1,3,5,6" data-slide="1" id="MultiCarousel" data-interval="1000">
                <div class="MultiCarousel-inner">
                    @foreach (var item in parkFacility.ParkFeatures)
                    {
                        Zengenti.Contensis.Delivery.Image img = (item.FeatureIcon != null) ? item.FeatureIcon : new Zengenti.Contensis.Delivery.Image(null, item.Feature);
                        <div class="item">
                            <div class="pad15">
                                <img alt="@item.Feature" src="@String.Format("{0}", img.Asset != null ? img.Asset.Uri : img_no_icon)" />
                                <span class="item-span">@item.Feature</span>
                            </div>
                        </div>
                    }
                </div>
                <button class="btn leftLst"><img class="left-arrow" src="~/SiteElements/ChannelShift/Content/images/parks-and-greenspaces/polygon.png" alt="left-arrow" /></button>
                <button class="btn rightLst"><img class="right-arrow" src="~/SiteElements/ChannelShift/Content/images/parks-and-greenspaces/polygon-right.png" alt="right-arrow" /></button>
            </div>
        </div>
    </div>
}

@if (parkDetails != null)
{
    <div class="row">
        <div class="col-md-8">
            <h2>Park information</h2>
            @Html.Raw(parkDetails.Description)
            <br />
            <h3>Location</h3>
            <div id="map" style="width:100%;height:650px;background:yellow"></div>
        </div>
        <div class="col-md-4">
            <div id="faclitiies-listing">
                <h3>On site facilities</h3>
                @if (facilities != null && facilities.Count > 0)
                {
