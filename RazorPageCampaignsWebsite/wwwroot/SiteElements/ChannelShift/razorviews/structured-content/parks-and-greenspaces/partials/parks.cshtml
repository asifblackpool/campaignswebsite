                {
                    var item = parkfacilitiesCollection.getFacility(txt);
                    if (item != null && item.Image != string.Empty)
                    {
                        <li class="park-item-facility">@txt<span class="icon-placeholder"><img class="icon" src="@item.Image" alt="@txt" /></span></li>
                    }
                    else
                    {
                        <li class="park-item-facility">@txt</li>
                    }

                }

            </ul>
                }

            </div>
            <div id="parking-container">
                <h3 style="color:#041C2C;">Parking</h3>
                <dl>
